<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.7.0//EN"
        "http://gwtproject.org/doctype/2.7.0/gwt-module.dtd">
<module rename-to="tempic">
    <!-- Inherit the core Web Toolkit stuff. -->
    <inherits name='com.google.gwt.user.User'/>

    <!-- Frontend logging for easy debugging -->
    <inherits name="com.google.gwt.logging.Logging"/>
    <inherits name="com.google.gwt.junit.JUnit"/>

    <!-- Specify the app entry point class. -->
    <entry-point class='com.uzh.tempic.client.Tempic'/>

    <!-- Specify the app servlets. -->
    <servlet path='/tempicService' class='com.uzh.tempic.server.TempicServiceImpl'/>

    <!-- Specify the path for the sources. -->
    <source path='client'/>
    <source path='shared'/>
    <source path='test'/>

</module>
